<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DropShadowEffect x:Key="ControlShadow" BlurRadius="10" ShadowDepth="0" Direction="270" Color="Black" RenderingBias="Performance" Opacity="0.5"/>

    <DropShadowEffect x:Key="NoShadow" BlurRadius="0" ShadowDepth="0" Direction="270" Color="Transparent" RenderingBias="Performance" Opacity="0"/>

    <DropShadowEffect x:Key="ContextMenuDropShadowEffect" BlurRadius="12" ShadowDepth="5" Direction="270" Color="Black" RenderingBias="Performance" Opacity="0.5"/>

</ResourceDictionary>