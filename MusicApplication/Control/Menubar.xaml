<UserControl x:Class="MusicApplication.Control.Menubar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicApplication.Control" xmlns:viewmodel="clr-namespace:MusicApplication.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MenuViewModel}"
             mc:Ignorable="d" 
             d:DesignWidth="800" d:Background="{StaticResource MainView.Background}"
             >
    <UserControl.DataContext>
        <viewmodel:MenuViewModel/>
    </UserControl.DataContext>
    <StackPanel Orientation="Horizontal">
        <Button Content="Open" Command="{Binding OpenCommand}" Height="28" Width="68" Padding="2,2,2,2"/>
        <Button Content="Test" Command="{Binding TestCommand}" Height="28" Width="68" Padding="2,2,2,2"/>
    </StackPanel>
</UserControl>
