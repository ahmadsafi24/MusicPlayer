<Window x:Class="MusicApplication.Windows.ControlbarWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicApplication.Windows" xmlns:Control="clr-namespace:MusicApplication.Control" xmlns:view="clr-namespace:MusicApplication.View"
        mc:Ignorable="d" ResizeMode="NoResize" SizeToContent="Height"
        Title="Window1" Width="600"
        Topmost = "True" Background="{x:Null}" BorderThickness="0" ShowInTaskbar="True">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5,0" NonClientFrameEdges="None" GlassFrameThickness="-1" UseAeroCaptionButtons="False" CornerRadius="0"/>
    </WindowChrome.WindowChrome>
</Window>
